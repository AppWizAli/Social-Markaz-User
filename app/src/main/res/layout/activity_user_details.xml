<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.ActivityUserDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="User Details."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/gray"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:text="Please provide following information to continue the services of Social Markaz."/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:cardElevation="6dp"
          android:layout_marginTop="9dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="8dp">


            <RelativeLayout

                android:id="@+id/layUserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_m">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:text="Add Phone Number"/>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            android:tint="@color/primary" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add and verify your phone number for alerts!"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        android:textColor="#7C7B7B" />

                    <TextView
                        android:id="@+id/tvHeaderUserPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_marginTop="9dp"
                        android:text="Required*"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imgCheckUserPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/check_dark" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:cardElevation="6dp"
          android:layout_marginTop="9dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="8dp">


            <RelativeLayout
                android:id="@+id/layUserPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_m">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:text="Payment  Details"/>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            app:tint="@color/primary" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add your payment details for funds transfer"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        android:textColor="#7C7B7B" />

                    <TextView
                        android:id="@+id/tvHeaderUserPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_marginTop="9dp"
                        android:text="Required*"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imgCheckUserPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/check_dark" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:cardElevation="6dp"
          android:layout_marginTop="9dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="8dp">


            <RelativeLayout
                android:id="@+id/layUserProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_m">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:text="Profile Photo"/>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            android:tint="@color/primary" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload your profile photo for clear identity"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        android:textColor="#7C7B7B" />

                    <TextView
                        android:id="@+id/tvHeaderUserPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_marginTop="9dp"
                        android:text="Required*"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imgCheckUserPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/check_dark" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:cardElevation="6dp"
          android:layout_marginTop="9dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="8dp">


            <RelativeLayout
                android:id="@+id/layUserGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_m">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:text="Gender"/>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            android:tint="@color/primary" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please select your gender"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        android:textColor="#7C7B7B" />

                    <TextView
                        android:id="@+id/tvHeaderUserGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_marginTop="9dp"
                        android:text="Required*"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imgCheckUserGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/check_dark" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:cardElevation="6dp"
          android:layout_marginTop="9dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="8dp">


            <RelativeLayout
                android:id="@+id/layUserLocation"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_m">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:text="Base Location"/>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            android:tint="@color/primary" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add your base location for recomendations"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        android:textColor="#7C7B7B" />

                    <TextView
                        android:id="@+id/tvHeaderUserLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_marginTop="9dp"
                        android:text="Required*"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/imgCheckUserLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/check_dark" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_button"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/primary"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:drawableTint="@color/white"
            android:text="Get Started" />


    </LinearLayout>

</ScrollView>